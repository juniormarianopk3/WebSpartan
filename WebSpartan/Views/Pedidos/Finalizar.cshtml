@using WebSpartan.Models
@using System.Globalization
@model List<ItemCarrinho>

@{
    ViewData["Title"] = "Finalizar Pedido";

    var enderecos = ViewBag.Enderecos as List<UserAddress> ?? new List<UserAddress>();
    decimal subtotal = Model.Sum(i => i.Produto.Preco * i.Quantidade);

    decimal cashbackPrevisto = Model.Sum(i =>
        (i.Produto.Preco * i.Quantidade) * (i.Produto.CashbackPercentual ?? 0m)
    );
    cashbackPrevisto = Math.Round(cashbackPrevisto, 2);

    // ✅ número "safe" pro JS (sempre com ponto)
    var subtotalJs = subtotal.ToString("0.00", CultureInfo.InvariantCulture);

    decimal saldo = (decimal)(ViewBag.SaldoCashback ?? 0m);
    decimal limitePercent = (decimal)(ViewBag.LimiteCashbackPercent ?? 0.30m);
    decimal limiteValor = (decimal)(ViewBag.LimiteCashbackValor ?? 0m);
}

<div class="container py-4">
    <h2 class="mb-4 text-center text-uppercase">Finalizar Pedido</h2>

    @if (!Model.Any())
    {
            <div class="alert alert-warning text-center">
                Seu carrinho está vazio.
                <br />
                <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-primary mt-2">
                    Voltar à loja
                </a>
            </div>
    }
    else
    {
            <div class="row">
                <!-- Endereços -->
                <div class="col-lg-5 mb-3">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-header bg-dark text-white">
                            <i class="bi bi-geo-alt"></i> Selecione a entrega
                        </div>

                        <div class="card-body">
                        @if (!enderecos.Any())
                        {
                                    <p class="text-muted">Você ainda não possui endereços cadastrados.</p>
                                    <a asp-controller="Usuario" asp-action="NovoEndereco" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-plus-circle"></i> Cadastrar endereço
                                    </a>
                        }
                        else
                        {
                                    <form asp-action="Finalizar" asp-controller="Pedidos" method="post" id="formFinalizar">

                                        <div class="mb-3">
                                            <label class="form-label">Entrega</label>

                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="combinarEntrega" id="entregaEndereco" value="false" checked>
                                                <label class="form-check-label" for="entregaEndereco">
                                                    Entregar no meu endereço
                                                </label>
                                            </div>

                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="combinarEntrega" id="entregaCombinar" value="true">
                                                <label class="form-check-label" for="entregaCombinar">
                                                    Combinar a entrega com o vendedor
                                                </label>
                                            </div>

                                            <small class="text-muted d-block mt-2">
                                                Se escolher combinar, o frete ficará <b>R$ 0,00</b> e você define a entrega via WhatsApp com o vendedor.
                                            </small>
                                        </div>

                                        <div class="mb-3" id="boxEndereco">
                                            <label class="form-label">Endereço de entrega</label>

                                            <select id="enderecoSelect" name="enderecoId" class="form-select">
                                                <option value="">Selecione um endereço</option>

                                        @foreach (var e in enderecos)
                                        {
                                            var texto = $"{e.Rua}, {e.Numero} - {e.Bairro} - {e.Cidade}/{e.Estado}";
                                            if (e.Principal)
                                            {
                                                                <option value="@e.Id" selected>@texto (Principal)</option>
                                            }
                                            else
                                            {
                                                                <option value="@e.Id">@texto</option>
                                            }
                                        }
                                            </select>
                                        </div>

                                        <!-- RESUMO (MOBILE) -->
                                        <div class="d-lg-none mb-3">
                                            <h5>Resumo</h5>
                                            <p><strong>Subtotal:</strong> R$ @subtotal.ToString("N2")</p>

                                            <p>
                                                <strong>Frete:</strong> R$
                                                <span id="mobFrete">0,00</span>
                                            </p>

                                            <p class="fs-5">
                                                <strong>Total:</strong>
                                                <span class="text-success">
                                                    R$ <span id="mobTotal">@subtotal.ToString("N2")</span>
                                                </span>
                                            </p>
                                        </div>

                                @if (User.Identity.IsAuthenticated && saldo > 0)
                                {
                <div class="alert alert-success mt-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="usarCashback" value="true" id="usarCashback">
                        <label class="form-check-label" for="usarCashback">
                            Usar meu cashback disponível: <strong>R$ @saldo.ToString("N2")</strong>
                        </label>
                    </div>

                    <small class="text-muted d-block mt-2">
                                    Limite por compra: <b>@((limitePercent * 100m).ToString("0"))%</b> do subtotal
                        (<b>R$ @limiteValor.ToString("N2")</b>).
                    </small>
                </div>
                                }
                                        <ul class="nav nav-pills mt-3" id="payTabs" role="tablist">
                                            <li class="nav-item" role="presentation">
                                                <button class="nav-link active" id="tab-pix" data-bs-toggle="tab" data-bs-target="#pane-pix" type="button" role="tab">
                                                    <i class="bi bi-qr-code-scan"></i> PIX
                                                </button>
                                            </li>
                                            <li class="nav-item" role="presentation">
                                                <button class="nav-link" id="tab-cartao" data-bs-toggle="tab" data-bs-target="#pane-cartao" type="button" role="tab">
                                                    <i class="bi bi-credit-card"></i> Cartão
                                                </button>
                                            </li>
                                        </ul>

                                        <div class="tab-content border rounded p-3 mt-2">
                                            <div class="tab-pane fade show active" id="pane-pix" role="tabpanel">
                                                <p class="text-muted mb-2">
                                                    Você será redirecionado para gerar o QR Code do PIX.
                                                </p>

                                                <button type="submit"
                                                        name="metodoPagamento"
                                                        value="pix"
                                                        class="btn btn-success w-100">
                                                    <i class="bi bi-qr-code-scan"></i> Continuar com PIX
                                                </button>
                                            </div>

                                            <div class="tab-pane fade" id="pane-cartao" role="tabpanel">
                                                <p class="text-muted mb-2">
                                                    Você será redirecionado para pagar com cartão (checkout transparente).
                                                </p>

                                                <button type="submit"
                                                        name="metodoPagamento"
                                                        value="cartao"
                                                        class="btn btn-primary w-100">
                                                    <i class="bi bi-credit-card"></i> Continuar com Cartão
                                                </button>
                                            </div>
                                        </div>

                                                
                                    </form>
                        }
                        </div>

                    </div>
                </div>

                <!-- Itens do pedido -->
                <div class="col-lg-7 mb-3">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-header bg-dark text-white">
                            <i class="bi bi-bag"></i> Itens do Pedido
                        </div>

                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table align-middle">
                                    <thead>
                                        <tr>
                                            <th>Produto</th>
                                            <th class="text-center">Quantidade</th>
                                            <th class="text-end">Valor Unitário</th>
                                            <th class="text-end">Subtotal</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                    @foreach (var item in Model)
                                    {
                                        var sub = item.Produto.Preco * item.Quantidade;

                                        var img = string.IsNullOrWhiteSpace(item.Produto.ImagemUrl)
                                            ? Url.Content("~/imagens/no-image.png")
                                            : Url.Content(item.Produto.ImagemUrl);

                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center gap-3">
                                                            <img src="@img"
                                                                 alt="@item.Produto.Nome"
                                                                 class="rounded"
                                                                 style="width:55px;height:55px;object-fit:cover;" />

                                                            <div>
                                                                <div class="fw-semibold">@item.Produto.Nome</div>
                                                                <small class="text-muted">R$ @item.Produto.Preco.ToString("N2")</small>
                                                            </div>
                                                        </div>
                                                    </td>

                                                    <td class="text-center">@item.Quantidade</td>
                                                    <td class="text-end">R$ @item.Produto.Preco.ToString("N2")</td>
                                                    <td class="text-end">R$ @sub.ToString("N2")</td>
                                                </tr>
                                    }
                                    </tbody>

                                    <tfoot>
                                        <tr>
                                            <th colspan="3" class="text-end">Subtotal:</th>
                                            <th class="text-end">R$ @subtotal.ToString("N2")</th>
                                        </tr>

                                        <tr>
                                            <th colspan="3" class="text-end">Frete:</th>
                                            <th class="text-end">
                                                R$ <span id="deskFrete">0,00</span>
                                            </th>
                                        </tr>

                                        <tr>
                                            <th colspan="3" class="text-end">Total:</th>
                                            <th class="text-end text-success fs-5">
                                                R$ <span id="deskTotal">@subtotal.ToString("N2")</span>
                                            </th>
                                        </tr>

                                        <tr>
                                            <th colspan="3" class="text-end">Cashback previsto:</th>
                                            <th class="text-end text-success fs-5">
                                                R$ + <span id="deskCashback">@cashbackPrevisto.ToString("N2")</span>
                                            </th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <a asp-controller="Home" asp-action="Carrinho" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-arrow-left"></i> Voltar ao carrinho
                </a>
            </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const enderecoSelect = document.getElementById("enderecoSelect");
            const boxEndereco = document.getElementById("boxEndereco");
            const radioEndereco = document.getElementById("entregaEndereco");
            const radioCombinar = document.getElementById("entregaCombinar");

            const subtotal = parseFloat("@subtotalJs"); // ✅ agora é JS válido

            function setFreteZero() {
                const frete = 0;
                const total = subtotal + frete;

                document.getElementById('deskFrete').innerText = '0,00';
                document.getElementById('deskTotal').innerText = total.toFixed(2).replace(".", ",");

                const mobFrete = document.getElementById('mobFrete');
                const mobTotal = document.getElementById('mobTotal');
                if (mobFrete) mobFrete.innerText = '0,00';
                if (mobTotal) mobTotal.innerText = total.toFixed(2).replace(".", ",");
            }

            function atualizarFrete() {
                if (!enderecoSelect || !enderecoSelect.value) return;

                fetch('/Pedidos/CalcularFrete?enderecoId=' + enderecoSelect.value)
                    .then(r => r.json())
                    .then(data => {
                        if (!data.sucesso) return;

                        document.getElementById('deskFrete').innerText = data.frete.toFixed(2).replace(".", ",");
                        document.getElementById('deskTotal').innerText = data.total.toFixed(2).replace(".", ",");

                        const mobFrete = document.getElementById('mobFrete');
                        const mobTotal = document.getElementById('mobTotal');
                        if (mobFrete) mobFrete.innerText = data.frete.toFixed(2).replace(".", ",");
                        if (mobTotal) mobTotal.innerText = data.total.toFixed(2).replace(".", ",");
                    })
                    .catch(() => { /* opcional: mostrar erro */ });
            }

            function toggleEntrega() {
                const combinar = radioCombinar.checked;

                if (combinar) {
                    boxEndereco.style.display = "none";
                    if (enderecoSelect) enderecoSelect.value = "";
                    setFreteZero();
                } else {
                    boxEndereco.style.display = "block";
                    if (enderecoSelect && enderecoSelect.value) atualizarFrete();
                }
            }

            radioEndereco.addEventListener("change", toggleEntrega);
            radioCombinar.addEventListener("change", toggleEntrega);

            if (enderecoSelect) {
                enderecoSelect.addEventListener("change", function () {
                    if (radioCombinar.checked) return;
                    atualizarFrete();
                });
            }

            // inicial
            toggleEntrega();
            if (enderecoSelect && enderecoSelect.value && radioEndereco.checked) atualizarFrete();
        });
    </script>
}
