@model WebSpartan.Models.ViewModels.CarrinhoViewModel
@{
    ViewData["Title"] = "Meu Carrinho";
    decimal total = Model.Itens.Sum(i => i.Produto.Preco * i.Quantidade);
}

<div class="container py-4">
    <h2 class="mb-4">Seu Carrinho</h2>

    @if (!Model.Itens.Any())
    {
        <div class="alert alert-warning">
            Seu carrinho está vazio.
        </div>
    }
    else
    {
        <ul class="list-group mb-4">
            @foreach (var item in Model.Itens)
            {
                var img = string.IsNullOrWhiteSpace(item.Produto.ImagemUrl)
                ? Url.Content("~/imagens/no-image.png")
                : Url.Content(item.Produto.ImagemUrl);

                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-3">
                        <img src="@img"
                             alt="@item.Produto.Nome"
                             class="rounded"
                             style="width:60px;height:60px;object-fit:cover;" />

                        <div>
                            <strong>@item.Produto.Nome</strong> <br />
                            <small class="text-muted">Quantidade: @item.Quantidade</small>
                        </div>
                    </div>

                    <div class="d-flex align-items-center gap-3">
                        <div class="fw-semibold">
                            R$ @((item.Produto.Preco * item.Quantidade).ToString("N2"))
                        </div>

                        <!-- Botão remover -->
                        <button class="btn btn-sm btn-danger remover-item"
                                data-id="@item.Produto.Id">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </li>


            }

            <li class="list-group-item d-flex justify-content-between">
                <strong>Total:</strong>
                <span>R$ @total.ToString("N2")</span>
            </li>
        </ul>

        <div class="text-end">
            <a asp-controller="Pedidos" asp-action="Finalizar" class="btn btn-success">
                <i class="bi bi-bag-check"></i> Finalizar Compra
            </a>
        </div>
    }
</div>
@section Scripts {
    <script>
        $(document).on("click", ".remover-item", function () {
            var produtoId = $(this).data("id");

            $.ajax({
                url: '@Url.Action("RemoverItemCarrinho", "Home")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(produtoId),
                success: function (res) {
                    if (res.sucesso) {
                        // Atualiza a página ou remove o item da lista
                        location.reload();
                        // ou manipular DOM para atualizar quantidade/total sem reload
                    } else {
                        alert("Produto não encontrado no carrinho.");
                    }
                }
            });
        });
    </script>
}