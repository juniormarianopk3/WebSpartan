@model WebSpartan.Models.ViewModels.ProdutoViewModel

<h2>Editar Produto</h2>

<form asp-action="Editar" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Preco" class="form-label"></label>
        <input asp-for="Preco" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Imagem Atual:</label><br />
        @if (!string.IsNullOrEmpty(Model.ImagemAtual))
        {
            <img src="@Model.ImagemAtual" class="img-thumbnail mb-2" style="max-width: 200px;" />
        }
        
    </div>

    <div class="mb-3">
        <label class="form-label">Alterar Imagem (opcional)</label>
        <input asp-for="ImagemUrl" type="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a asp-action="Index" asp-controller="Produto" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

