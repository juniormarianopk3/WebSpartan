@model WebSpartan.Models.ViewModels.ProdutoViewModel

<h2>Criar Produto</h2>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var state in ViewData.ModelState.Values)
            {
                @foreach (var error in state.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}
<form asp-action="Criar" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImagemUrl" class="control-label"></label>
        <input type="file" class="form-control" asp-for="ImagemUrl" />
        <span asp-validation-for="ImagemUrl" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}