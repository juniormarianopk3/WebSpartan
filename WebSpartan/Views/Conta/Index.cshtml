@{
    ViewData["Title"] = "Painel Administrativo";
}

<h1 class="mb-4">Painel Administrativo</h1>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <!-- Card: Adicionar Produto -->
    <div class="col">
        <div class="card h-100 shadow-sm border-primary">
            <div class="card-body text-center">
                <i class="bi bi-plus-circle-fill text-primary" style="font-size: 2rem;"></i>
                <h5 class="card-title mt-2">Adicionar Produto</h5>
                <p class="card-text text-muted">Crie um novo produto e adicione ao catálogo.</p>
                <a asp-controller="AdminProduto" asp-action="Criar" class="btn btn-primary">Adicionar</a>
            </div>
        </div>
    </div>

    <!-- Card: Gerenciar Produtos -->
    <div class="col">
        <div class="card h-100 shadow-sm border-success">
            <div class="card-body text-center">
                <i class="bi bi-box-seam-fill text-success" style="font-size: 2rem;"></i>
                <h5 class="card-title mt-2">Gerenciar Produtos</h5>
                <p class="card-text text-muted">Veja, edite ou exclua os produtos cadastrados.</p>
                <a asp-controller="AdminProduto" asp-action="Index" class="btn btn-success">Gerenciar</a>
            </div>
        </div>
    </div>
    <!-- Card: Editar WhatsApp -->
    <div class="col">
        <div class="card h-100 shadow-sm border-info">
            <div class="card-body text-center">
                <i class="bi bi-whatsapp text-info" style="font-size: 2rem;"></i>
                <h5 class="card-title mt-2">Editar WhatsApp</h5>
                <p class="card-text text-muted">Atualize o número do WhatsApp usado para contato.</p>
                <a asp-controller="Conta" asp-action="EditWhatsApp" class="btn btn-info text-white">Editar</a>
            </div>
        </div>
    </div>


    <!-- Card: Sair -->
    <div class="col">
        <div class="card h-100 shadow-sm border-danger">
            <div class="card-body text-center">
                <i class="bi bi-box-arrow-right text-danger" style="font-size: 2rem;"></i>
                <h5 class="card-title mt-2">Sair</h5>
                <p class="card-text text-muted">Encerrar sua sessão administrativa com segurança.</p>
                <form asp-controller="Conta" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-danger">Logout</button>
                </form>
            </div>
        </div>
    </div>
</div>
