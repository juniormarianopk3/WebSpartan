@model List<WebSpartan.Models.ViewModels.AdminUsuarioListItemViewModel>

@{
    ViewData["Title"] = "Usuários";
    var sort = (string)(ViewBag.Sort ?? "nome");
    var q = (string)(ViewBag.Q ?? "");
}

<div class="container py-4">
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-3">
        <h3 class="fw-bold mb-0"><i class="bi bi-people"></i> Usuários</h3>

        <form method="get" class="d-flex flex-wrap gap-2">
            <input name="q" value="@q" class="form-control" style="min-width:260px"
                   placeholder="Buscar por nome, email ou telefone..." />

            <select name="sort" class="form-select" style="min-width:260px" onchange="this.form.submit()">
                <option value="nome" selected="@(sort=="nome")">Ordem alfabética (A–Z)</option>
                <option value="nome_desc" selected="@(sort=="nome_desc")">Ordem alfabética (Z–A)</option>
                <option value="semcomprar" selected="@(sort=="semcomprar")">Mais tempo sem comprar</option>
                <option value="recentes" selected="@(sort=="recentes")">Comprou mais recentemente</option>
            </select>

            <button class="btn btn-dark" type="submit">
                <i class="bi bi-search"></i> Filtrar
            </button>

            <a class="btn btn-outline-secondary" href="@Url.Action("Usuarios","Admin")">
                Limpar
            </a>
        </form>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Telefone</th>
                            <th class="text-center">Última compra</th>
                            <th class="text-center">Dias sem comprar</th>
                            <th class="text-center">Pedidos pagos</th>
                            <th class="text-end">Total gasto</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center p-4 text-muted">
                                    Nenhum usuário encontrado.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var u in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@u.Nome</td>
                                    <td class="text-muted">@u.Email</td>
                                    <td>@(string.IsNullOrWhiteSpace(u.Telefone) ? "-" : u.Telefone)</td>

                                    <td class="text-center">
                                        @if (u.UltimaCompra.HasValue)
                                        {
                                            @u.UltimaCompra.Value.ToString("dd/MM/yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Nunca</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        @if (u.DiasSemComprar.HasValue)
                                        {
                                            <span class="badge bg-warning text-dark">@u.DiasSemComprar.Value dias</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">—</span>
                                        }
                                    </td>

                                    <td class="text-center">@u.TotalPedidosPago</td>

                                    <td class="text-end fw-semibold">
                                        @((u.TotalGasto ?? 0m).ToString("C"))
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Voltar ao painel
        </a>
    </div>
</div>
